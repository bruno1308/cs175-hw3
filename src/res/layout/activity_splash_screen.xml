<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/ninja"
    tools:context="com.example.cs175_hw3.SplashScreen" >
	

	<fragment
        android:id="@+id/um_fragment"
        android:name="com.example.cs175_hw3.UserModeFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        tools:layout="@layout/fragment_user_mode" />
	<fragment
        android:id="@+id/frag_exercise"
        android:name="com.example.cs175_hw3.ExerciseFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        tools:layout="@layout/fragment_exercise" />
	<fragment
        android:id="@+id/frag_stats"
        android:name="com.example.cs175_hw3.StatsFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        tools:layout="@layout/fragment_stats" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="37dp" 
        style="?android:attr/buttonBarStyle">
         

        <Button
            android:id="@+id/exercise"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Exercise"
            android:layout_weight="1"
            android:onClick="startExercise" 
           
            style="?android:attr/buttonBarButtonStyle"/>

        <Button
            android:id="@+id/user"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:onClick="startUserMode"
            
            android:text="User Mode" />

        <Button
            android:id="@+id/stats"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Stats" 
            android:onClick="startStats"
            
            style="?android:attr/buttonBarButtonStyle"/>
    </LinearLayout>

</RelativeLayout>